<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeCommon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorTheme</item>// Navigation back icon.
    </style>

    <style name="ImmersiveTheme" parent="AppThemeCommon">
        <item name="android:windowAnimationStyle">@style/WindowNoAnimStyle</item>
    </style>

    <style name="WindowNoAnimStyle" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorTheme</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:textColor">#9b9b9b</item>
        <item name="tabSelectedTextColor">@color/colorTheme</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorDivider</item>
    </style>
</resources>
